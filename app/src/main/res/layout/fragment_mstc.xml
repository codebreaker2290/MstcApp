<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_alignLeft="@id/stcImage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68px"
        android:background="#C4C4C4"
        android:backgroundTint="#C4C4C4"
        android:padding="10sp"
        android:text="ABOUT US"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/stcImage"
        android:layout_width="116sp"
        android:layout_height="100sp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="70sp"
        app:srcCompat="@drawable/pp" />

    <TextView
        android:id="@+id/stcName"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="30sp"
        android:background="#C4C4C4"
        android:backgroundTint="#C4C4C4"
        android:padding="10sp"
        android:text="Stc Chapter"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stcInsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stcName"
        android:layout_alignLeft="@id/stcName"
        android:layout_marginTop="10sp"
        android:layout_toRightOf="@id/stcImage"
        android:background="#C4C4C4"
        android:backgroundTint="#C4C4C4"
        android:padding="10sp"
        android:text="INSTAGRAM"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stcLinked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stcInsta"
        android:layout_alignLeft="@id/stcInsta"
        android:layout_marginTop="10sp"
        android:background="#C4C4C4"
        android:backgroundTint="#C4C4C4"
        android:padding="10sp"
        android:text="LINKEDIN"
        android:textStyle="bold" />
</RelativeLayout>